{
  "name": "woodstack",
  "version": "1.0.0",
  "description": "Simple npm stack workflow for Front-end Developper",
  "private": true,
  "babel": {
    "presets": [
      [
        "@babel/env",
        {
          "targets": {
            "browsers": [
              "last 2 versions",
              "safari >= 7"
            ]
          }
        }
      ]
    ]
  },
  "watch": {
    "build-html": {
      "patterns": [
        "src/html"
      ],
      "extensions": "shtml",
      "quiet": false
    },
    "build-css": {
      "patterns": [
        "src/scss/"
      ],
      "extensions": "scss",
      "quiet": false
    },
    "build-js": {
      "patterns": [
        "src/js/"
      ],
      "extensions": "js",
      "quiet": false
    }
  },
  "scripts": {
    "build-html": "shtml2html -s src/html -d dist/",
    "build-css": "node-sass --output-style=compressed --source-map=dist/css/styles.css.map src/scss/styles.scss dist/css/styles.min.css",
    "js-dir": "make-dir dist/js",
    "js-bundle": "webpack",
    "js-transpile": "babel dist/js/script-bundled.js -o dist/js/script-transpiled.js",
    "js-minify": "terser dist/js/script-transpiled.js -c -m --source-map -o dist/js/script-minified.js",
    "build-js": "run-s js-dir js-bundle js-transpile js-minify",
    "watch-css": "npm-watch build-css",
    "watch-html": "npm-watch build-html",
    "watch-js": "npm-watch build-js",
    "build": "run-s clear build-*",
    "watch": "run-s build watch-*",
    "clear": "del -f dist/"
  },
  "author": "Matthieu Schneider",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.1.5",
    "@babel/core": "^7.1.6",
    "@babel/preset-env": "^7.1.6",
    "bootstrap": "^4.1.3",
    "copyfiles": "^2.1.0",
    "del-cli": "^1.1.0",
    "make-dir-cli": "^1.0.0",
    "node-sass": "^4.9.3",
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.4.0",
    "shtml2html": "^1.0.5",
    "terser": "^3.10.11",
    "webpack": "^4.26.1",
    "webpack-cli": "^3.1.2"
  },
  "dependencies": {
    "@babel/polyfill": "^7.0.0",
    "lodash": "^4.17.11"
  }
}
